<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_normal</item>
        <item name="android:listDividerAlertDialog">@drawable/divider_border</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //可伸缩toolbar样式

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorBlack</item>


    </style>

    <!-- 全屏主题 Logo页使用 -->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 左右能填满的Toolbar样式 -->
    <style name="FillToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <!-- Dialog从底部弹出动画 -->
    <style name="animTranslateBottom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/translate_out_bottom</item>
    </style>
    <!-- Dialog从顶部弹出动画 -->
    <style name="animTranslateTop" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_in_top</item>
        <item name="android:windowExitAnimation">@anim/translate_out_top</item>
    </style>

    <style name="animScaleTop" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in_top</item>
        <item name="android:windowExitAnimation">@anim/scale_out_top</item>
    </style>

    <style name="animScaleCenter" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_center</item>
    </style>

    <!-- H5页面进度条样式 -->
    <style name="ProgressBarH5" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@color/colorBlack</item>
    </style>

    <!-- 下载对话框样式 -->
    <style name="ProgressBarDownload" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_blue</item>
    </style>

    <!-- 加载等待对话框样式 SpotsDialog使用 -->
    <style name="Loading" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">加载中...</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">6</item>
        <item name="android:windowBackground">@drawable/shape_solid_trans</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
